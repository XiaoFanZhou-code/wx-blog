/**index.wxss**/

/*轮播控件*/
Page {
  background-color: #F7F7F7;
}

.home-swiper {
  width: 100%;
  height: 500rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

/* 搜索控件 */

.search {
  padding-top: 20rpx;
  border: 10rpx;
}

/* 最新文章 */
.article {
  padding-left: 20rpx;
  padding-top: 20rpx;
  display: flex;
}

.articleIcon {
  width: 10rpx;
  height: 45rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
  background-color: #FED71A;
}
/* 文章内容 */

.content-box {
  margin: 20rpx;
  background-color: #FFFFFF;
  box-shadow: 0 20rpx 60rpx 0 #F2F2F2;
  border-radius: 24rpx;
}

.contentImage {
  width: 665rpx;
  height: 300rpx;
  padding: 20rpx;
  /* margin: 10rpx; */
}

.content {
  color: #B5B5B5;
  font-size: 28rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}
.bottom {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.bottom {
  padding: 0 20rpx 20rpx 20rpx;
}

.iconImages {
  width: 16rpx;
  height: 16rpx;
}

.category {
  font-size: 28rpx;
  color: #333333;
}


.content {
  color: #B5B5B5;
  font-size: 24rpx;
}

.commentsImages {
  width: 24rpx;
  height: 24rpx;
}